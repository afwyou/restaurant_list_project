<h1 class="mb-1 restaurant-show-title">{{this.name}}</h1>
<div class="container">
  <form action="/restaurant/{{this._id}}/edit" method="POST">
    {{!-- 變成表單 --}}
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <img class="rounded mx-auto d-block mb-4 w-100" src="{{this.image}}" alt="{{this.name}}"
          style="max-width: 600px;">

        <div class="mb-3 mr-2">
          <label for="name">Restaurant Name</label>
          <input type="text" class="form-control" id="name" name="name" value="{{this.name}}">
        </div>

        <p class="mb-1 mr-2">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：{{this.category}}
            <select id="category" class="form-control" name="category">
              <option>選擇餐廳類型</option>
              <option>美式餐廳</option>
              <option>日本料理</option>
              <option>義式餐廳</option>
              <option>中式餐廳</option>
              <option>泰式料理</option>
              <option>中東料理</option>
              <option>異國風味</option>
              <option>吃到飽</option>
              <option>早午餐</option>
              <option>咖啡</option>
              <option>酒吧</option>
            </select>
          </span>
          <label for="category"></label>
        </p>
      </div>

      <div class="col-12 col-md-10 mx-auto">
        <p class="mb-1 mr-2">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
            <label for="address"></label>
            <input type="text" class="form-control" id="address" name="location" value="{{this.location}}">
            <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
              <i class="fas fa-location-arrow pr-2 fa-xs"></i>
            </a>
          </span>
        </p>
      </div>

      <div class="col-12 col-md-10 mx-auto">
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
            <label for="phone"></label>
            <input type="text" class="form-control" id="address" name="phone" value="{{this.phone}}">
          </span>
        </p>
      </div>

      <div class="col-12 col-md-10 mx-auto">
        {{!-- <div class="form-group col-md-4"> --}}
          <label for="rating">Rating</label>
          <input type="text" class="form-control" id="rating" name="rating" value="{{this.rating}}">
          {{!--
        </div> --}}
      </div>

      <div class="col-12 col-md-10 mx-auto mt-5">
        <h3>餐廳簡述</h3>
        <p class="mb-5">
          {{this.description}}
        </p>
      </div>
      <div class="form-group col-md-10 justify-content-start" style="margin-top: 10px;">
        <button type="submit" class="btn btn-info">Submit</button>
        <a href="/">
          <button type="button" class="btn btn-warning ml-3">Back</button>
        </a>

      </div>
    </div>
  </form>
</div>